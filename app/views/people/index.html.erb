<h1>People</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.full_name %></td>
        <td><%= person.location %></td>
        <td class="fit"><%= link_to 'Show', person, class: "btn btn-success" %></td>
        <% if user_signed_in? %>
          <td class="fit"><%= link_to 'Edit', edit_person_path(person), class: "btn btn-primary" %></td>
          <td class="fit"><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% else %>
          <td colspan="2>" class="fit"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<% if user_signed_in? %>
  <%= link_to 'New Person', new_person_path, class: "btn btn-primary" %>

  <h3>Import Data</h3>
  <%= form_tag import_people_path, multipart: true, class: "form-inline" do %>
    <div class="form-group">
      <%= file_field_tag :file, class: "form-control" %>
    </div>

    <div class="actions form-group">
      <%= submit_tag "Import CSV", class: "btn btn-success" %>
      <%= link_to 'Download a template csv', asset_path("people_template.csv"), class: "btn btn-link" %>
    </div>
  <% end %>
<% end %>
