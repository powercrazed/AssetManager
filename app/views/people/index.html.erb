<h1 class="mb-4">People</h1>

<table class="table table-striped table-sm table-borderless">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3" class="fit"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.full_name %></td>
        <td><%= person.location %></td>
        <td><%= link_to 'Show', person, class: "btn btn-success" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_person_path(person), class: "btn btn-primary" %></td>
          <td><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% else %>
          <td colspan="2"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<% if user_signed_in? %>
  <%= link_to 'New Person', new_person_path, class: "btn btn-primary" %>
<% end %>
