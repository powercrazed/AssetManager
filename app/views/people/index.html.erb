<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>People</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.full_name %></td>
          <td><%= person.location %></td>
          <td class="fit"><%= link_to 'Show', person, class: "btn btn-primary" %></td>
          <td class="fit"><%= link_to 'Edit', edit_person_path(person), class: "btn btn-primary" %></td>
          <td class="fit"><%= link_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Person', new_person_path, class: "btn btn-primary" %>
</div>
