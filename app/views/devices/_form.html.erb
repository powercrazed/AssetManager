<% if @device.errors.any? %>
  <div id="error_explanation" class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</strong>

    <ul>
    <% @device.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<!-- horizontal form -->
<%= form_for @device, :html => {:class => "form-horizontal"} do |f| %>

  <div class="form-group">
    <%= f.label :tag, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :tag, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :dev_type, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :dev_type, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :make, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :make, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :model, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :model, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :serial, class: "col-xs-12 col-sm-2 control-label" %>
    <div class="col-xs-10 col-sm-4">
      <%= f.text_field :serial, class: "form-control" %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-xs-12 col-sm-10 col-sm-offset-2">
      <%= f.submit "Submit", class: "btn btn-success" %>
      <%= link_to "Back", :back, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
