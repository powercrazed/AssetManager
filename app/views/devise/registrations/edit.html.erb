<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card bg-light mt-4">
        <div class="card-header container-fluid">
          <h3>Edit <%= resource_name.to_s.humanize %></h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group row">
              <%= f.label :email, class: "col-lg-4 col-form-label text-right" %>
              <div class="col">
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group row">
              <%= f.label :current_password, class: "col-lg-4 col-form-label text-right" %>
              <div class="col">
                <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
                <span class="help-block">We need your current password to confirm changes</span>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password, "New Password", class: "col-lg-4 col-form-label text-right" %>
              <div class="col">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                <% if @minimum_password_length %>
                  <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
                <% end %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :password_confirmation, class: "col-lg-4 col-form-label text-right" %>
              <div class="col">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>
            </div>

            <div class="actions form-group row">
              <div class="col offset-lg-4">
                <%= f.submit "Update", class: "btn btn-success" %>
                <%= link_to "Back", :back, class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>