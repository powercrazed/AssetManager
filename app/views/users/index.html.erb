<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Users</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.location %></td>
          <td class="fit"><%= link_to 'Show', user, class: "btn btn-primary" %></td>
          <td class="fit"><%= link_to 'Edit', edit_user_path(user), class: "btn btn-primary" %></td>
          <td class="fit"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
</div>
